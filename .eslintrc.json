{
  "env": {
    "es6": true,
    "node": true,
    "mocha": true,
    "jquery": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2018,
    "ecmaFeatures": {
      "impliedStrict": true
    }
  },
  "rules": {
    "indent": ["error", 2],
    "quotes": ["warn", "single"],
    "semi": ["warn", "never"],
    "brace-style": ["warn", "stroustrup", { "allowSingleLine": true }]
  }
}
