{
  "name": "zyper_tcp",
  "version": "1.0.1-beta.1",
  "description": "Driver for Zyper Management Platform over a TCP Connection",
  "main": "index.js",
  "scripts": {
    "start": "node index.js"
  },
  "author": "Audio Visual Distributors",
  "license": "MIT",
  "overture": {
    "brand": "ZeeVee",
    "models": [ "Management Platform" ],
    "type": "device",
    "subtype": "matrix",
    "variables": [
      {
        "name": "Status",
        "type": "enum",
        "enums": [ "Disconnected", "Connected" ]
      }
    ],
    "commands": [
    ],
    "pointSetupSchema": {
      "title": "Zyper Management Platform Settings",
      "type": "object",
      "properties": {
        "host": {
          "title": "Host name or IP address:",
          "type": "string",
          "default": "192.168.99.40"
        },
        "port": {
          "title": "Port:",
          "type": "integer",
          "default": 23,
          "description": "Default: 23"
        },
        "encoders": {
          "title": "Encoders",
          "type": "array",
          "format": "table",
          "uniqueItems": true,
          "items": {
            "title": "Encoder",
            "type": "object",
            "properties": {
              "name": {
                "title": "Name",
                "type": "string"
              },
              "model": {
                "title": "Model",
                "type": "string",
                "enum": [ "ZyperUHD", "Zyper4K" ]
              },
              "usb": {
                "title": "USB Attached?",
                "type": "checkbox"
              },
              "usbname": {
                "title": "USB Nickname",
                "type": "string"
              }
            },
            "required": [
              "name",
              "model",
              "usb",
              "usbname"
            ]
          }
        },
        "decoders": {
          "title": "Decoders",
          "type": "array",
          "format": "table",
          "uniqueItems": true,
          "items": {
            "title": "Decoder",
            "type": "object",
            "properties": {
              "name": {
                "title": "Name",
                "type": "string"
              },
              "model": {
                "title": "Model",
                "type": "string",
                "enum": [ "ZyperUHD", "Zyper4K" ]
              },
              "usb": {
                "title": "USB Attached?",
                "type": "checkbox"
              },
              "usbname": {
                "title": "USB Nickname",
                "type": "string"
              }
            },
            "required": [
              "name",
              "model",
              "usb",
              "usbname"
            ]
          }
        },
        "multiviews": {
          "title": "Multiviews",
          "description": "Multiviews are only available on Zyper4K units",
          "type": "array",
          "format": "table",
          "uniqueItems": true,
          "items": {
            "title": "Multiview",
            "type": "string"
          }
        },
        "videowalls": {
          "title": "Video-Walls",
          "type": "array",
          "format": "table",
          "uniqueItems": true,
          "items": {
            "type": "object",
            "title": "Videowall",
            "properties": {
              "name": {
                "title": "Name",
                "type": "string"
              },
              "model": {
                "title": "Model",
                "type": "string",
                "enum": [ "ZyperUHD", "Zyper4K" ]
              }
            },
            "required": [
              "name",
              "model"
            ]
          }
        }
      },
      "required": [
        "host",
        "port",
        "encoders",
        "decoders",
        "multiviews",
        "videowalls"
      ]
    }
  }
}
