    "commands": [
      {
        "name": "Set Value",
        "params": {
          "Status": {
            "type": "string"
          },
          "Channel": {
            "type": "string"
          }
        }
      }
    ],
    "pointSetupSchema": {
      "type": "object",
      "title": "Thor RF11iQ IP Settings",
      "properties": {
        "host": {
          "title": "Host name or IP address:",
          "type": "string",
          "default": "10.1.1.18"
        },
        "port": {
          "title": "Port:",
          "type": "integer",
          "default": 80
        },
        "username": {
          "title": "Username:",
          "type": "string",
          "default": "admin"
        },
        "password": {
          "title": "Password:",
          "type": "string",
          "default": "THORRF11"
        },
        "polling_interval": {
          "title": "Polling Interval (milliseconds):",
          "type": "integer",
          "default": 10000
        }
      },
      "required": [
        "host",
        "port",
        "username",
        "password",
        "polling_interval"
      ]
    }
  },
  "dependencies": {
    "xml2js": "^0.4.19"
  }
