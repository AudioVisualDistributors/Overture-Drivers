{
  "name": "thor_rf11iq",
  "version": "1.0.0",
  "description": "Driver for Thor RF11iQ PDU using TCP Connection",
  "main": "index.js",
  "scripts": {
    "start": "node index.js"
  },
  "author": "Audio Visual Distributors",
  "license": "MIT",
  "overture": {
