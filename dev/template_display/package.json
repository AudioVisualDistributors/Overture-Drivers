{
  "name": "template_display",
  "version": "1.0.0",
  "description": "Driver for display.",
  "main": "index.js",
  "scripts": {
    "start": "node index.js"
  },
  "author": "AudioVisualDistributors",
  "license": "Unlicensed",
  "overture": {
    "brand": "BRAND",
    "models": ["MODEL"],
    "type": "device",
    "subtype": "display",
        "variables": [
      {
        "name": "Status",
        "type": "enum",
        "enums": ["Disconnected","Connected"]
      },
      {
        "name": "Power",
        "type": "enum",
        "enums": ["Off", "On"],
        "perform": {
          "action": "Set Power",
          "params": {
            "Status": "$string"
          }
        }
      },
      {
        "name": "Sources",
        "type": "enum",
        "enums": ["DTV", "HDMI1", "HDMI2", "HDMI3", "HDMI4"],
        "perform": {
          "action": "Select Source",
          "params": {
            "Name": "$string"
          }
        }
      },
      {
        "name": "AudioLevel",
        "type": "integer",
        "min": 0,
        "max": 100,
        "perform": {
          "action": "Set Audio Level",
          "params": {
            "Level": "$value"
          }
        }
      },
      {
        "name": "AudioMute",
        "type": "enum",
        "enums": ["Off", "On"],
        "perform": {
          "action": "Set Audio Mute",
          "params": {
            "Status": "$string"
          }
        }
      },
      {
        "name": "Channel",
        "type": "integer",
        "min": 1,
        "max": 99,
        "perform": {
          "action": "Set Channel",
          "params": {
            "Name": "$value"
          }
        }
      },
      {
        "name": "ChannelShift",
        "type": "enum",
        "enums": ["", "Up", "Down"],
        "perform": {
          "action": "Shift Channel",
          "params": {
            "Name": "$string"
          }
        }
      }
    ],
    
    "commands": [
      {
        "name": "Set Power",
        "params": {
          "Status": {
            "type": "enum",
            "enums": [
              "Off",
              "On"
            ]
          }
        }
      },
      {
        "name": "Select Source",
        "params": {
          "Name": {
            "type": "string"
          }
        }
      },
      {
        "name": "Set Audio Level",
        "params": {
          "Level": {
            "type": "integer"
          }
        }
      },
      {
        "name": "Set Audio Mute",
        "params": {
          "Status": {
            "type": "enum",
            "enums": [
              "Off",
              "On"
            ]
          }
        }
      },
      {
        "name": "Set Channel",
        "params": {
          "Name": {
            "type": "integer"
          }
        }
      },
      {
        "name": "Shift Channel",
        "params": {
          "Name": {
            "type": "enum",
            "enums": [
              "",
              "Up",
              "Down"
            ]
          }
        }
      }
    ],

    "pointSetupSchema": {
      "type": "object",
      "title": "Display IP Settings",
      "properties": {
        "host": {
          "title": "Host name or IP address:",
          "type": "string",
          "default": "192.168.1.100"
        },
        "port": {
          "title": "Port:",
          "type": "integer",
          "default": 20060,
          "description": "Default: 20060"
        }
      },
      "required": [
        "host",
        "port"
      ]
    }
  }
}