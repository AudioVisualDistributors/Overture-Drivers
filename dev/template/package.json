{
  "name": "template",
  "version": "1.0.0",
  "description": "Driver",
  "main": "index.js",
  "scripts": {
    "start": "node index.js"
  },
  "author": "Audio Visual Distributors",
  "license": "MIT",
  "overture": {
    "brand": "BRAND",
    "models": [
      "MODEL"
    ],
    "type": "device",
    "subtype": "generic",
    "variables": [
      {
        "name": "Status",
        "type": "enum",
        "enums": ["Disconnected", "Connected"]
      },
      {
        "name": "Power",
        "type": "enum",
        "enums": ["Off", "On"],
        "perform": {
          "action": "Set Power",
          "params": { "Status": "$string"} }
      }
    ],

    "commands": [
      {
        "name": "Set Power",
        "params": {
          "Status": { "type": "string" }
        }
      }
    ],

    "pointSetupSchema": {
      "type": "object",
      "title": "Template Setup",
      "properties": {
        "host": {
          "title": "Host name or IP address:",
          "type": "string",
          "default": "192.168.99.1"
        },
        "port": {
          "title": "Port:",
          "type": "integer",
          "default": 23,
          "description": "Telnet: 23"
        }
      },
      "required": [
        "host",
        "port"
      ]
    }
  }
}