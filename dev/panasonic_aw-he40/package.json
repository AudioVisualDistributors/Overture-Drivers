{
  "name": "panasonic_aw-he40",
  "version": "1.0.0-beta.1",
  "description": "Driver for Panasonic AW-HE40 PTZ Camera",
  "main": "index.js",
  "scripts": {
    "start": "node index.js"
  },
  "author": "Audio Visual Distributors",
  "license": "MIT",
  "overture": {
    "brand": "Panasonic",
    "models": ["AW-HE40"],
    "type": "device",
    "subtype": "camera",
    "variables": [
      {
        "name": "Status",
        "type": "enum",
        "enums": [
          "Disconnected",
          "Connected"
        ]
      },
      {
        "name": "Power",
        "type": "enum",
        "enums": [
          "Off",
          "On"
        ],
        "perform": {
          "action": "Set Power",
          "params": {
            "Status": "$string"
          }
        }
      },
      {
        "name": "Channel",
        "type": "integer",
        "min": 1,
        "max": 99,
        "perform": {
          "action": "Set Channel",
          "params": {
            "Name": "$value"
          }
        }
      }
    ],
    "commands": [
      {
        "name": "Set Power",
        "params": {
          "Status": { "type": "enum", "enums": [ "Off", "On" ] }
        }
      },
      {
        "name": "Select Source",
        "params": {
          "Name": { "type": "string" }
        }
      },
      {
        "name": "Set Audio Level",
        "params": {
          "Level": { "type": "integer" }
        },
        "optimize": true
      }
    ],
    "pointSetupSchema": {
      "type": "object",
      "title": "Panasonic PTZ Camera IP Settings",
      "properties": {
        "host": {
          "title": "Host name or IP address:",
          "type": "string",
          "default": "192.168.3.20"
        },
        "port": {
          "title": "Port:",
          "type": "integer",
          "default": 20060,
          "description": "Default: 20060"
        },
        "simulation": {
          "title": "Simulation Mode",
          "type": "checkbox",
          "description": "Simulate device, mainly for use with UI development"
        }
      },
      "required": [
        "host",
        "port"
      ]
    }
  }
}
