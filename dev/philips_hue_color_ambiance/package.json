{
  "name": "philips_hue_color_ambiance",
  "version": "1.0.2",
  "description": "Driver For Philips Hue Color Ambiance",
  "main": "index.js",
  "scripts": {
    "start": "node index.js"
  },
  "author": "Medialon",
  "dependencies": {
    "node-hue-api": "^2.4.1"
  },
  "license": "SEE LICENSE IN license.txt",
  "overture": {
    "brand": "Philips",
    "model": "philips_hue_color_ambiance",
    "models": [
      "philips_hue"
    ],
    "type": "device",
    "subtype": "lighting",
    "variables": [
      {
        "name": "Status",
        "type": "enum",
        "enums": [
          "Disconnected",
          "Connected"
        ]
      },
      {
        "name": "Presets",
        "type": "enum",
        "enums": [
          ""
        ],
        "perform": {
          "action": "Recall Preset",
          "params": {
            "Name": "$string"
          }
        }
      }
    ],
    "commands": [
      {
        "name": "Set State",
        "params": {
          "Channel": {
            "type": "integer"
          },
          "State": {
            "type": "enum",
            "enums": [
              "Off",
              "On"
            ]
          }
        },
        "optimize": [
          "Channel"
        ]
      },
      {
        "name": "Set Level",
        "params": {
          "Channel": {
            "type": "integer"
          },
          "Level": {
            "type": "integer"
          }
        },
        "optimize": [
          "Channel"
        ]
      },
      {
        "name": "Set Color",
        "params": {
          "Channel": {
            "type": "integer"
          },
          "Color": {
            "type": "string"
          }
        },
        "optimize": [
          "Channel"
        ]
      },
      {
        "name": "Set Color Temperature",
        "params": {
          "Channel": {
            "type": "integer"
          },
          "ColorTemperature": {
            "type": "integer",
            "min": 2000,
            "max": 6500
          }
        },
        "optimize": [
          "Channel"
        ]
      },
      {
        "name": "Recall Preset",
        "params": {
          "Name": {
            "type": "string"
          }
        }
      }
    ],
    "pointSetupSchema": {
      "type": "object",
      "title": "Driver",
      "properties": {
        "host": {
          "title": "Host name or IP address:",
          "type": "string",
          "default": "127.0.0.1",
          "description": "The address of the Hue Bridge"
        },
        "username": {
          "title": "User name:",
          "type": "string",
          "default": "public",
          "description": "Enter Username as provided by the Hue Bridge"
        },
        "lamps": {
          "type": "array",
          "format": "table",
          "title": "Lamps",
          "uniqueItems": true,
          "items": {
            "type": "object",
            "title": "Lamp",
            "properties": {
              "identifier": {
                "type": "integer"
              }
            },
            "required": [
              "identifier"
            ]
          }
        }
      },
      "required": [
        "host",
        "username"
      ]
    }
  }
}
